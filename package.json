{
  "name": "tabflow",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter extension dev",
    "dev:api": "pnpm --filter tabflow-api dev",
    "dev:all": "concurrently -n api,ext -c cyan,yellow --kill-others-on-fail \"pnpm dev:api\" \"pnpm dev\"",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop tabflow-api",
    "pm2:restart": "pm2 restart tabflow-api",
    "pm2:logs": "pm2 logs tabflow-api",
    "pm2:status": "pm2 status",
    "build": "pnpm --filter extension build",
    "build:api": "pnpm --filter tabflow-api build",
    "zip": "pnpm --filter extension zip"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
